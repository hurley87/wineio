<div class='review-container'>
<h2>Reviews</h2>

<div id="review-list">
  <%= render :partial => "review_list" %>
</div>

<% if current_user %>
  <h4>New Review</h4>
  <%= form_for [@wine, @review], :remote => true do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body, class: "text-review" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_user_session_path %> to add a review.</p> 
<% end %>
</div>