

<h1 class='opener center'><%= @wine.name %></h1>
<h3 class='opener center'> <%= link_to "Back", wine_path(@wine.id - 1), class: 'o-link' %> | <%= link_to "Forward", wine_path(@wine.id + 1), class: 'o-link' %></h3>
<div class='container'>
	<div class="show-left">
		<% if @wine.image %>
		<p class='center'><img src="<%= @wine.image %>"></p>
		<% else %>
		<p class='center'><%= image_tag('wine.jpeg') %></p>
		<% end %>
	</div>

	<div class='show-right'>
		<% if current_user %>
			<%= form_for [@wine, @wrack] do |f|  %>
				<% submit_tag 'Pick This Wine', class: 'submit-btn' %>
			<% end %>
		<% else %>	
			<%= link_to 'Register', new_user_path, class: 'o-link' %> to start collecting
		<% end %>
		<p>Location: <%= @wine.location %></p>
		<p>Vintage: <%= @wine.vintage %></p>
		<p>Winery: <%= @wine.winery %></p>
		<p>varietal: <%= @wine.varietal %></p>
		<p>Price: <%= @wine.price %></p>
		<% if @wine.wine_type? %>
		<p>Type: <%= @wine.wine_type %></p>
		<% end %>
		<% if @wine.note? %>
		<p>Additional Information: <%= @wine.note %></p>
		<% end %>
	</div>
	<br>
	<br>
	<%= render 'ratings'  %>
	<br class='clear'>
	<div class='review-wine'>
		<%= render 'reviews'  %>
	</div>
</div>
