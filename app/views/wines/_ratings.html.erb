
<h2>Rate this Wine!</h2>

<% if @wine.ratings.any? %>
<div id="rating-time">
  <%= render :partial => "show_rating" %>
</div>
<% else %>
<p>Be first to rate this wine!</p>
<% end %>

<div id='rating-form'>
<% if current_user %>
<%= form_for [@wine, @rating] do |f|  %>
    <span class='r-rating'>
    <%= f.label :one_star %>
    <%= f.radio_button 'stars', 1 %>
    </span>
    <span class='r-rating'>
    <%= f.label :two_star %>
    <%= f.radio_button 'stars', 2 %>
    </span>
    <span class='r-rating'>
    <%= f.label :three_star %>
    <%= f.radio_button 'stars', 3 %>
    </span>
    <span class='r-rating'>
    <%= f.label :four_star %>
    <%= f.radio_button 'stars', 4 %>
    </span>
    <span class='r-rating'>
    <%= f.label :five_star %>
    <%= f.radio_button 'stars', 5 %>
    </span>
    <br>
  <div class="actions">
    <br>
      <p><%= f.submit 'Rate', class: 'submit-btn' %></p>
  </div>
<% end %>
<% else %>
  <p>Please <%= link_to "log in", new_user_session_path %> to add a review.</p> 
<% end %>
</div>